{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "preserve",
    "downlevelIteration": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "src/vite-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
