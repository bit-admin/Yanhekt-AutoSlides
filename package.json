{
  "name": "autoslides",
  "version": "3.2.0-beta",
  "description": "Automatic slide capture application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder"
  },
  "author": "bit-admin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bit-admin/Yanhekt-AutoSlides.git"
  },
  "bugs": {
    "url": "https://github.com/bit-admin/Yanhekt-AutoSlides/issues"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "darkreader": "^4.9.105",
    "electron-store": "^8.1.0",
    "express": "^5.1.0",
    "express-basic-auth": "^1.2.1",
    "i18next": "^25.0.1",
    "i18next-fs-backend": "^2.6.0",
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.autoslides.app",
    "productName": "AutoSlides",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "asar": true,
    "compression": "maximum",
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}"
    ],
    "extraResources": [
      {
        "from": "src/locales",
        "to": "locales"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        "dmg", "pkg"
      ],
      "artifactName": "${productName}-${version}-macOS-${arch}.${ext}"
    },
    "pkg": {
      "allowAnywhere": true,
      "allowCurrentUserHome": false,
      "allowRootDirectory": true,
      "installLocation": "/Applications",
      "isVersionChecked": true,
      "isRelocatable": false,
      "overwriteAction": "upgrade",
      "welcome": "build/pkg-welcome.rtf",
      "conclusion": "build/pkg-conclusion.rtf"
    },
    "win": {
      "target": [
        "nsis", "7z"
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-Windows-${arch}.${ext}",
      "appId": "AutoSlides"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AutoSlides",
      "perMachine": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": true,
      "displayLanguageSelector": true
    }
  }
}
