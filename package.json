{
  "name": "autoslides",
  "version": "3.2.0-beta",
  "description": "Automatic slide capture application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder"
  },
  "author": "bit-admin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bit-admin/Yanhekt-AutoSlides.git"
  },
  "bugs": {
    "url": "https://github.com/bit-admin/Yanhekt-AutoSlides/issues"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "darkreader": "^4.9.105",
    "electron-store": "^8.1.0",
    "express": "^5.1.0",
    "express-basic-auth": "^1.2.1",
    "i18next": "^25.0.1",
    "i18next-fs-backend": "^2.6.0",
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.autoslides.app",
    "productName": "AutoSlides",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "asar": true,
    "compression": "maximum",
    "extraResources": [
      {
        "from": "src/locales",
        "to": "locales"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "pkg"
      ],
      "artifactName": "${productName}-${version}-macOS-${arch}.${ext}"
    },
    "dmg": {
      "background": "build/background.png"
    },
    "pkg": {
      "allowAnywhere": true,
      "allowCurrentUserHome": false,
      "allowRootDirectory": true,
      "installLocation": "/Applications",
      "isVersionChecked": true,
      "isRelocatable": false,
      "overwriteAction": "upgrade",
      "welcome": "build/pkg-welcome.rtf",
      "conclusion": "build/pkg-conclusion.rtf",
      "scripts": "build/scripts"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico",
      "appId": "AutoSlides"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AutoSlides",
      "perMachine": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": true,
      "displayLanguageSelector": true,
      "multiLanguageInstaller": true,
      "installerLanguages": [
        "en_US",
        "zh_CN"
      ],
      "artifactName": "${productName}-Setup-${version}-Windows-${arch}.${ext}"
    }
  }
}
